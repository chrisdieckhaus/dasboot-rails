<div class="space"></div>

<h1><%= @user.first_name %> <%= @user.last_name %>'s Schedule</h1>

<table class="table">
    <tr>
		<th>Date</th>
		<th>Start Time</th>
		<th>End Time</th>
		<th></th>
		<th></th>
	</tr>
	<% @user.shifts.sort_by{|s| s.start_time }.each do |shift| %>
		<tr>
			<td>
				<%= shift.start_time.strftime('%A %-m/%-d') %>
			</td>
			<td>
				<%= shift.start_time.strftime('%H:%M') %>
			</td>
			<td>
				<%= shift.end_time.strftime('%H:%M') %>
			</td>
			<td>
				<%= link_to "Edit", edit_shift_path(shift) if current_user.role == 'admin' %>
			</td>
			<td>
				<%= button_to 'x', shift_path(shift), method: :delete if current_user.role == 'admin' %>
			</td>
		</tr>
	<% end %>
</table>

<br>

<h1><%= @user.first_name %> <%= @user.last_name %>'s Availability</h1>

<table class="table">
    <tr>
		<th>Date</th>
		<th>Times</th>
		<th></th>
		<th></th>
	</tr>
	<% @user.availabilities.sort_by{|a| [a.day_date, a.times] }.each do |av| %>
		<tr>
			<td>
				<%= av.day_date.strftime('%A %-m/%-d') %>
			</td>
			<td>
				<%= av.times %>
			</td>
			<td>
				<%= link_to 'Edit', edit_availability_path(av) if @user == current_user || current_user.role == 'admin' %>
			</td>
			<td>
				<%= button_to 'x', availability_path(av), method: :delete if @user == current_user || current_user.role == 'admin' %>
			</td>
		</tr>
	<% end %>
</table>
