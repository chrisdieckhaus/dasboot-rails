<%= stylesheet_link_tag "sessions" %>

<div class="space-large">
</div>

<div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2 card">
	<div class="title-bar">
		<h1 class="small-caps">Sign up</h1>
	</div>
	<div class="content-bar content-bar-padded">
		<%= bootstrap_form_for(@user) do |f| %> 
			<%= f.text_field :first_name, :placeholder => "First name" %>
  			<%= f.text_field :last_name, :placeholder => "Last name" %>
			<%= f.email_field :email, :placeholder => "Email" %> 
		  	<%= f.password_field :password, :placeholder => "Password" %> 
	  		<%= f.submit "Create an account", class: "btn btn-primary btn-raised" %>
		<% end %>
	</div>
</div>