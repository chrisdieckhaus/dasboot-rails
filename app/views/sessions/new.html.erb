<%= stylesheet_link_tag "bootstrap" %>

<div class="space-large">
</div>

<div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2 card">
	<div class="title-bar">
		<h1 class="small-caps">Log in.</h1>
	</div>
	<div class="content-bar content-bar-padded">
		<%= form_for(:session, url: login_path) do |f| %> 
			<%= f.email_field :email, :placeholder => "Email" %> 
		  <%= f.password_field :password, :placeholder => "Password" %> 
	  	<%= f.submit "Log in", class: "btn btn-primary" %>
	<% end %>
	</div>
</div>

