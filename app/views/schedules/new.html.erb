<div class="space"></div>

<div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1 card no-center">
	<div class="title-bar">
		<h1 class="small-caps">New Schedule</h1>
	</div>
	<div class="content-bar list-group">
		<%= bootstrap_form_for(@schedule) do |f| %>
			<%= f.text_field :schedule_name, :placeholder=>"Schedule name"%>
			<br>
			<%= f.date_select :start_date, :min => Date.today %>
			<%= f.date_select :end_date, :min => Date.today %>
			<br>
			<%= f.submit "Create schedule", class: "btn btn-primary btn-raised" %>
		<% end %>
	</div>	
</div>