<div class="space"></div>

<h1>Edit Shift</h1>

<%= form_for(@shift) do |f| %>
	<%= f.hidden_field :schedule_id, :value => @shift.schedule_id %>
	<%= f.collection_select(:user_id, User.all, :id, :first_name, :prompt => true, :required=> true) %>
	<br>
	<%= f.label :start_time %>
	<%= f.datetime_select :start_time, :discard_year => true, :ampm => true %>
	<br>
	<%= f.label :end_time %>
	<%= f.datetime_select :end_time, :discard_year => true, :ampm => true %>
	<br>
	<%= f.label :night_shift %>
	<%= f.check_box :night_shift %>
	<br>
	<%= f.submit "Update shift", class: "btn-submit" %>
<% end %>