<div class="space"></div>

<div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1 card">
	<div class="title-bar">
		<h1 class="small-caps">New Shift for <%= @schedule.schedule_name %></h1>
	</div>
	<div class="content-bar list-group">
		<% user_names = @users.map{|u| u.first_name} %>

		<%= bootstrap_form_for(@shift) do |f| %>
			<%= f.hidden_field :schedule_id, :value => @schedule.id %>
			<%= f.collection_select(:user_id, User.all, :id, :first_name, :prompt => true, :required=> true) %>
			<br>
			<%= f.datetime_select :start_time, :discard_year => true , :ampm => true, :default => { :minute => 00 }, :minute_step => 15 %>
			<%= f.datetime_select :end_time, :discard_year => true, :ampm => true, :default => { :minute => 00 }, :minute_step => 15 %>
			<br>
			<%= f.check_box :night_shift %>
			<br>
			<%= f.submit "Create shift", class: "btn btn-primary btn-raised" %>
		<% end %>
	</div>	
</div>