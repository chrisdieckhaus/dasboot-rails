<div class="space"></div>

<h1>Availabilities for <%= @user.first_name %> <%= @user.last_name %></h1>

These are the time's <%= @user.first_name %> is <strong>not</strong> available.

<table class="table">
    <tr>
		<th>Date</th>
		<th>Times</th>
		<th></th>
		<th></th>
	</tr>
	<% @avs.sort_by{|a| [a.day_date, a.times] }.each do |av| %>
		<tr>
			<td>
				<%= av.day_date.strftime('%A %-m/%-d') %>
			</td>
			<td>
				<%= av.times %>
			</td>
			<td>
				<%= link_to 'Edit', edit_availability_path(av) %>
			</td>
			<td>
				<%= button_to 'x', availability_path(av), method: :delete %>
			</td>
		</tr>
	<% end %>
</table>

<br>
