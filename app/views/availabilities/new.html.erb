<div class="space"></div>

<div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1 card no-center">
	<div class="title-bar">
		<h1 class="small-caps">New Availability</h1>
	</div>
	<div class="content-bar list-group">
		<%= bootstrap_form_for(@av) do |f| %>
			<%= f.datetime_select :start_time, :discard_year => true , :ampm => true, :default => { :minute => 00 }, :minute_step => 15 %>
			<br>
			<%= f.datetime_select :end_time, :discard_year => true , :ampm => true, :default => { :minute => 00 }, :minute_step => 15 %>
			<br>
			<%= f.submit "Add availability", class: "btn btn-primary btn-raised" %>
		<% end %>
	</div>	
</div>